<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <ba_vrf xmlns="http://example.com/ba_vrf">
    <vrf_name>{$vrf_name}</vrf_name>
    <endpoint>
      <id>{$endpoint_id}</id>
      <as_number>{$as_number}</as_number>
      <rd>{$rd}</rd>
      <vlan>{$vlan}</vlan>
      <csr>
        <device>{$csr_device}</device>
        <local>
          <interface_name>{$csr_interface_name}</interface_name>
          <interface_number>{$csr_interface_number}</interface_number>
          <ipv4_address>{$csr_ipv4_address}</ipv4_address>
          <ipv4_mask>{$csr_ipv4_mask}</ipv4_mask>
          <interface_description>{$csr_interface_description}</interface_description>
        </local>
        <link>
          <interface_name>{$csr_ul_interface_name}</interface_name>
          <interface_number>{$csr_ul_interface_number}</interface_number>
          <ipv4_address>{$csr_ul_ipv4_address}</ipv4_address>
          <ipv4_mask>{$csr_ul_ipv4_mask}</ipv4_mask>
          <interface_description>{$csr_ul_interface_description}</interface_description>
        </link>
      </csr>
      <er>
        <device>{$er_device}</device>
        <link>
          <interface_name>{$er_interface_name}</interface_name>
          <interface_number>{$er_interface_number}</interface_number>
          <ipv4_address>{$er_ipv4_address}</ipv4_address>
          <ipv4_mask>{$er_ipv4_mask}</ipv4_mask>
          <interface_description>{$er_interface_description}</interface_description>
        </link>
      </er>
    </endpoint>
  </ba_vrf>
</config-template>
