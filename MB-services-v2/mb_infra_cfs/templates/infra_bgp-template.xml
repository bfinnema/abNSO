<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$device}</name>
      <config>
        <router xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-um-router-bgp-cfg">
          <bgp>
            <as>
              <as-number>{$as_number}</as-number>
              <address-families>
                <address-family>
                  <af-name>ipv4-unicast</af-name>
                  <additional-paths>
                    <receive/>
                  </additional-paths>
                  <nexthop>
                    <trigger-delay>
                      <critical>200</critical>
                    </trigger-delay>
                  </nexthop>
                  <allocate-label>
                    <all/>
                  </allocate-label>
                </address-family>
                <address-family>
                  <af-name>vpnv4-unicast</af-name>
                  <retain>
                    <route-target>
                      <all/>
                    </route-target>
                  </retain>
                </address-family>
                <address-family>
                  <af-name>l2vpn-evpn</af-name>
                </address-family>
              </address-families>
              <nsr/>
              <ibgp>
                <policy>
                  <out>
                    <enforce-modifications/>
                  </out>
                </policy>
              </ibgp>
              <bgp>
                <as-path-loopcheck/>
                <graceful-restart/>
                <log>
                  <neighbor>
                    <changes>
                      <detail/>
                    </changes>
                  </neighbor>
                </log>
                <router-id>213.167.115.202</router-id>
              </bgp>
            </as>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config-template>
