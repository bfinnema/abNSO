<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <!-- THIS TEMPLATE IS USED IN CASE OF DIRECT DEPLOYMENT TO DEVICE, IE NO CFS - RFS CONCEPT -->
  <!-- THIS TEMPLATE IS FOR ALL DEVICE TYPES EXCEPT ER -->
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$device}</name>
      <config>
        <router xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-um-router-isis-cfg">
          <isis>
            <processes>
              <process>
                <process-id>{$instance}</process-id>
                <is-type>level-2-only</is-type>
                <log>
                  <adjacency>
                    <changes/>
                  </adjacency>
                </log>
                <lsp-gen-interval>
                  <maximum-wait>{$maxwait}</maximum-wait>
                  <!-- <maximum-wait>5000</maximum-wait> -->
                  <initial-wait>1</initial-wait>
                  <secondary-wait>50</secondary-wait>
                </lsp-gen-interval>
                <max-lsp-lifetime>
                  <max-lsp-lifetime>{$max_lsp_lifetime}</max-lsp-lifetime>
                  <!-- <max-lsp-lifetime>65535</max-lsp-lifetime> -->
                </max-lsp-lifetime>
                <lsp-refresh-interval>
                  <lsp-refresh-interval-time>64000</lsp-refresh-interval-time>
                </lsp-refresh-interval>
                <nets>
                  <net>
                    <net-id>{$net_id}</net-id>
                  </net>
                </nets>
                <nsf>
                  <cisco/>
                </nsf>
                <address-families>
                  <address-family>
                    <af-name>ipv4</af-name>
                    <saf-name>unicast</saf-name>
                    <metric-style>
                      <wide/>
                    </metric-style>
                    <spf-interval>
                      <maximum-wait>
                        <maximum-wait-time>5000</maximum-wait-time>
                      </maximum-wait>
                      <initial-wait>
                        <initial-wait-time>1</initial-wait-time>
                      </initial-wait>
                      <secondary-wait>
                        <secondary-wait-time>50</secondary-wait-time>
                      </secondary-wait>
                    </spf-interval>
                  </address-family>
                </address-families>
                <interfaces>
                  <interface>
                    <interface-name>Loopback0</interface-name>
                    <passive/>
                    <address-families>
                      <address-family>
                        <af-name>ipv4</af-name>
                        <saf-name>unicast</saf-name>
                      </address-family>
                    </address-families>
                  </interface>
                  <interface>
                    <interface-name>{$interface_name}{$interface_number}</interface-name>
                    <circuit-type>level-2-only</circuit-type>
                    <hello-padding>
                      <disable/>
                    </hello-padding>
                    <point-to-point/>
                    <address-families>
                      <address-family>
                        <af-name>ipv4</af-name>
                        <saf-name>unicast</saf-name>
                        <metric>
                          <levels>
                            <level>
                              <level-id>2</level-id>
                              <default-metric>100050</default-metric>
                            </level>
                          </levels>
                        </metric>
                        <mpls>
                          <ldp>
                            <sync>
                              <level>2</level>
                            </sync>
                          </ldp>
                        </mpls>
                      </address-family>
                    </address-families>
                  </interface>
                </interfaces>
              </process>
            </processes>
          </isis>
        </router>
      </config>
    </device>
  </devices>
</config-template>
